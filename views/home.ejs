<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/iziToast.css">

    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/footer.css">
</head>
<body>
    <%- include('_navbar'); %>
    <div class="welcome-container">
        <img src="   https://cdn-icons-png.flaticon.com/512/2143/2143150.png " width="100px" height="100px" alt="">
        <div class="welcome-heading">
            <h1>Sucessfully Sign In!</h1>
        </div>
        <div class="user-details">
            <!-- print the user name and email -->
            <h1><%= user.name %></h1>
            <h1><%= user.email %></h1>
        </div>
        <a href="/user/sign-out"><button>sign out</button></a>
    </div>
    <!-- <a href="/user/sign-out"><button>sign out</button></a> -->
    <%- include('_footer'); %>

    <script src="/js/script.js"></script>
    <script src="/js/iziToast.js" type="text/javascript"></script>
    <script>
        
        <% if (flash && flash.success && flash.success.length > 0) { %> 
            iziToast.success({
                title: 'Success',
                message: '<%= flash.success %>',
                theme: 'dark',
                backgroundColor: 'linear-gradient(130deg, rgba(18,119,243,1) 0%, rgba(11,73,149,1) 97%)',
                position: 'topCenter',
                progressBarColor: 'white',
                transitionInMobile: 'fadeInUp',
                transitionOutMobile: 'fadeOutUp',
                
            });
        <% } %>

        <% if (flash.error && flash.error.length > 0) { %> 
            iziToast.error({
                title: 'Error',
                message: '<%= flash.error %>',
                theme: 'dark',
                backgroundColor: '#AA0808',
                position: 'topCenter',
                progressBarColor: 'white',
                transitionInMobile: 'fadeInUp',
                transitionOutMobile: 'fadeOutUp',
            });
        <% } %>

        <% if (flash.info && flash.info.length > 0) { %> 
            iziToast.warning({
                title: 'Caution',
                message: '<%= flash.info %>',
                theme: 'dark',
                backgroundColor: '#FFB300',
                position: 'topCenter',
                progressBarColor: 'white',
                transitionInMobile: 'fadeInUp',
                transitionOutMobile: 'fadeOutUp',
            });

            // On redirect show the signupcontainer
            signInContainer.classList.toggle('remove');
            signUpContainer.classList.toggle('remove');
            
            
        <% } %>

        <% if (flash.warning && flash.warning.length > 0) { %> 
            iziToast.error({
                title: 'Error',
                message: '<%= flash.warning %>',
                theme: 'dark',
                backgroundColor: '#AA0808',
                position: 'topCenter',
                progressBarColor: 'white',
                transitionInMobile: 'fadeInUp',
                transitionOutMobile: 'fadeOutUp',
            });
            
            // On redirect show the forgotpasswordcontainer
            signInContainer.classList.toggle('remove');
            forgotPasswordContainer.classList.toggle('remove');
            
            
        <% } %>
        
    </script>
</body>
</html>