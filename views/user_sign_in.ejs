<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/sign-in.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/iziToast.css">

</head>
<body>
    <%- include('_navbar'); %>
    
    <div class="sign-in-container">
        <div class="outline">
            <form action="/user/create-session" method="post">
                <p class="form-heading">
                    <h1>Welcome,</h1>
                    <h1 class="last-h1">Ready to Aboard?</h1>
                </p>
                <div class="input-container">
                    <i class="fa-solid fa-envelope"></i>
                    <input type="email" name="email" placeholder="Email" required>
                </div>
                <div class="password-input-container">
                    <i class="fa-solid fa-key"></i>
                    <input type="password" name="password" placeholder="Password" class="password" required>
                    <i class="fa-solid fa-eye show-password"></i>
                </div>
                <div class="forget-password-container">
                    <a href="">forgot password ?</a>
                </div>
                <input type="submit" value="Sign In" class="sign-in-btn">
                <div class="divider">
                    <hr>
                    <p>Or</p>
                    <hr>
                </div>
                <div class="other-login-method-container">
                    <a href="/user/auth/google"><img src="   https://cdn-icons-png.flaticon.com/512/281/281764.png " alt="" width="20px" height="20px"><span>Login with Google</span></a>
                    <a href="/user/auth/github"><img src="   https://cdn-icons-png.flaticon.com/512/733/733553.png " alt="" width="20px" height="20px"><span>Login with Github</span></a>
                </div>
                <p class="sign-up-para">Don't have an account ? <a href="/user/sign-up">Sign Up</a></p>
            </form>
        </div>
    </div>
    
    <%- include('_footer'); %>
    <script src="/js/script.js"></script>
    <script src="/js/iziToast.js" type="text/javascript"></script>
    <script>
    
        <% if (flash && flash.success && flash.success.length > 0) { %> 
            iziToast.success({
                title: 'Success',
                message: '<%= flash.success %>',
                theme: 'dark',
                backgroundColor: 'linear-gradient(130deg, rgba(18,119,243,1) 0%, rgba(11,73,149,1) 97%)',
                position: 'topCenter',
                progressBarColor: 'white',
                transitionInMobile: 'fadeInUp',
                transitionOutMobile: 'fadeOutUp',
                
            });
        <% } %>

        <% if (flash.error && flash.error.length > 0) { %> 
            iziToast.error({
                title: 'Error',
                message: '<%= flash.error %>',
                theme: 'dark',
                backgroundColor: '#AA0808',
                position: 'topCenter',
                progressBarColor: 'white',
                transitionInMobile: 'fadeInUp',
                transitionOutMobile: 'fadeOutUp',
            });
        <% } %>

        <% if (flash.info && flash.info.length > 0) { %> 
            iziToast.warning({
                title: 'Caution',
                message: '<%= flash.info %>',
                theme: 'dark',
                backgroundColor: '#FFB300',
                position: 'topCenter',
                progressBarColor: 'white',
                transitionInMobile: 'fadeInUp',
                transitionOutMobile: 'fadeOutUp',
            });

            // On redirect show the signupcontainer
            signInContainer.classList.toggle('remove');
            signUpContainer.classList.toggle('remove');
            
            
        <% } %>

        <% if (flash.warning && flash.warning.length > 0) { %> 
            iziToast.error({
                title: 'Error',
                message: '<%= flash.warning %>',
                theme: 'dark',
                backgroundColor: '#AA0808',
                position: 'topCenter',
                progressBarColor: 'white',
                transitionInMobile: 'fadeInUp',
                transitionOutMobile: 'fadeOutUp',
            });
            
            // On redirect show the forgotpasswordcontainer
            signInContainer.classList.toggle('remove');
            forgotPasswordContainer.classList.toggle('remove');
            
            
        <% } %>
        
       </script>
</body>
</html>